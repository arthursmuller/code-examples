{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "build",
    "noEmit": false,
    "declarationMap": true,
    "sourceMap": true,
    "allowUmdGlobalAccess": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "lib": ["es6", "dom", "es2016", "es2017"]
  }
}
